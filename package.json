{
  "name": "ma-front-end",
  "version": "1.0.0",
  "description": "Front-end app for MutualArt.",
  "scripts": {
    "prebuild:all": "rm -rf build/*",
    "build:all": "yarn run build:client && yarn run build:server",
    "build:client": "NODE_ENV=production webpack -p --config webpack/client.config.js --progress",
    "build:server": "webpack --config webpack/server.config.js --progress",
    "prestart": "npm run build:all",
    "start": "NODE_ENV=production node --harmony-async-await build/server",
    "start:dev": "nodemon src/server -w src/server"
  },
  "main": "index.js",
  "repository": "github.com/samisking/ma-front-end",
  "author": "Sam King",
  "license": "MIT",
  "dependencies": {
    "koa": "next",
    "koa-compress": "next",
    "koa-convert": "^1.2.0",
    "koa-helmet": "^3.1.0",
    "koa-static": "^2.1.0",
    "react": "^15.4.2",
    "react-dom": "^15.4.2",
    "react-helmet": "^4.0.0",
    "react-redux": "^5.0.2",
    "react-router": "next",
    "react-router-dom": "next",
    "react-transform-hmr": "^1.0.4",
    "redux": "^3.6.0",
    "redux-thunk": "^2.2.0"
  },
  "devDependencies": {
    "assets-webpack-plugin": "^3.5.1",
    "autoprefixer": "^6.7.2",
    "babel-core": "^6.22.1",
    "babel-loader": "^6.2.10",
    "babel-plugin-react-transform": "^2.0.2",
    "babel-plugin-system-import-transformer": "^2.4.0",
    "babel-preset-env": "^1.1.8",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-react": "^6.22.0",
    "babel-preset-stage-1": "^6.22.0",
    "chunk-manifest-webpack-plugin": "^1.0.0",
    "css-loader": "^0.26.1",
    "extract-text-webpack-plugin": "2.0.0-rc.3",
    "file-loader": "^0.10.0",
    "ignore-loader": "^0.1.2",
    "koa-webpack-dev-middleware": "^1.4.4",
    "koa-webpack-hot-middleware": "^1.0.3",
    "nodemon": "^1.11.0",
    "postcss-for": "^2.1.1",
    "postcss-loader": "^1.3.0",
    "postcss-modules-values": "^1.2.2",
    "postcss-nested": "^1.0.0",
    "react-hot-loader": "next",
    "style-loader": "^0.13.1",
    "url-loader": "^0.5.7",
    "webpack": "^2.2.1",
    "webpack-node-externals": "^1.5.4"
  }
}
